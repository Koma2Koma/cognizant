<h1><%= @category.title %></h1>

<%= bootstrap_form_for @category do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :description %>
  <%= f.submit %>
<% end %>

<h2>Topics</h2>

<h3><%= link_to 'Add New Topic', new_category_topic_path(@category) %></h3>
  
<% if @topics.any? %>
  <ul>
    <% @topics.each do |topic| %>
      <li><strong><%= topic.title %></strong>
        <%= link_to 'view', topic_path(topic) %> 
        <%= link_to 'edit', edit_topic_path(topic) %> 
        <%= link_to 'delete', topic_path(topic), method: :delete %>
      </li>
        <ul>
          <li>Created: <%= topic.created_at %></li>
          <li>Last Update: <%= topic.updated_at %></li>
        </ul>
    <% end %>
  </ul>
<% end %>

