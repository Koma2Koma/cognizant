<h1>All Categories</h1>

<% if current_user %>
  <h3 class='admin-only'><%= link_to 'New Category', new_category_path, class: 'edit-link'%></h3>
<% end %>



<% if @categories.any? %>
  <ul>
  <% @categories.each do |category| %>
    <li><h3><%= link_to category.title, category_path(category) %></h3></li>
  <% end %>
  </ul>
<% end %>